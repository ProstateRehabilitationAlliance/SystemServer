    </trim>
  </insert>

  <!-- 验证用户密码是否正确-->
  <select id="selectUserByUsernameAndPassword" resultType="com.prostate.system.entity.User">
    select * from sys_user u where  1=1 and u.username = #{0} and u.password = #{1}
  </select>

  <!-- 根据用户名查询用户信息-->
  <select id="findUserWihtUserName" resultMap="BaseResultMap" parameterType="java.lang.String">
    select u.username,u.password,u.sex,u.phone,u.email,u.realname,u.avatar,u.salt from sys_user u where  1=1 AND u.username = #{username}
  </select>
  <!-- findUserIdByName -->
  <!-- 根据用户名查询用户id-->
  <select id="findUserIdByName" resultMap="BaseResultMap">
    select u.id from sys_user u where  1=1 AND u.username = #{0}
  </select>
